{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ],
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-extra-boolean-cast": "off",
        "@typescript-eslint/strict-boolean-expressions": 0,
        "@typescript-eslint/consistent-type-assertions": "off"
    }
}